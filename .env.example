# Database Configuration
DATABASE_URL=postgresql://username:password@hostname:port/database_name

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-minimum-32-characters

# Server Configuration
NODE_ENV=production
PORT=5000
# For demo mode without external OIDC (mock auth)
ENABLE_LOCAL_AUTH=true

# OpenAI API Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here

# LinkedIn API Configuration (Optional)
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# O*NET API Configuration (Optional)
ONET_USERNAME=your-onet-username
ONET_PASSWORD=your-onet-password

# Pinecone Vector Database Configuration (Optional)
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_INDEX=career-mirror
PINECONE_ENVIRONMENT=us-east1-gcp

# Email Configuration (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# SMS Configuration (Optional - for notifications)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# File Upload Configuration (Optional)
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Supabase (Auth + DB)
USE_SUPABASE_AUTH=true
SUPABASE_URL=https://YOUR_PROJECT_ID.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
# For client build
VITE_SUPABASE_URL=https://YOUR_PROJECT_ID.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key

# Client Currency Settings
# Default USD->INR conversion rate used in the client (can be overridden per deployment)
VITE_USD_INR_RATE=83
